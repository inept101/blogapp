<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head.ejs') %>
    <title>New Blog</title>
  </head>
  <body>
    <%- include('../partials/header.ejs') %>
    <main class="container">

    <div class="container">

    <div class="row">
      <div class="col-lg-6">
        <form action="/blogs/<%=blog._id%>?_method=PATCH" method="POST">
            <div class="mb-3">
                <label for="author" class="form-label"
                  >Author:</label
                >
                <input
                  type="text"
                  class="form-control"
                  name="blog[author]"
                  placeholder="Author name"
                  value= "<%= blog.author %> "
                />
              </div>
    
              <div class="mb-3">
                <label for="title" class="form-label"
                  >Title:</label
                >
                <input
                  type="text"
                  class="form-control"
                  name="blog[title]"
                  placeholder="Title"
                  value= "<%= blog.title%> "
                />
              </div>
          <div class="mb-3">
            <label for="image" class="form-label"
              >Image URL:</label
            >
            <input
              type="text"
              class="form-control"
              name="image"
              placeholder="URL"
              value="<%= blog.image%>"
            />
          </div>
          <div class="mb-3">
            <label for="blog[text]" class="form-label"
              >Write Blog here:</label
            >
            <textarea class="form-control" name="blog[text]" rows="5"><%= blog.text%></textarea>
          </div>
          <div class="mbl-3">
            <button type="submit" class="btn btn-dark btn-sm">Submit</button>
          </div>
        </form>
      </div>
    </div>
  </div>

</main>

    <%- include('../partials/footer.ejs') %>
  </body>
</html>
