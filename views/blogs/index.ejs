<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head.ejs') %> 
  <title>BLOGG APP | HOME</title>
    
</head>
<body>
    <%- include('../partials/header.ejs') %> 

    <main class="container">
    <section>
        <h4 class="display-4">BLOGS</h4>
    </section>
    
    <%- include('../partials/flash.ejs') %> 

    <div class="container-md"></div>
   <% blogs.slice(0).reverse().map(blog =>{ %>
    
      <div class="card mb-3" >
        <div class="row g-0">
          <div class="col-md-4">
            <div class="container-img ps-4" >
              <img src="<%=blog.image%>" class="img-thumbnail" alt="..." style="max-height: 240px; ">
            </div>
            
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title fs-4"><strong><%=blog.title%></strong></h5>
              <p class="card-text"><%=blog.text.substring(0,325)%>...</p>
              <p class="card-text"><small class="text-muted"><%=blog.author%></small></p>
              <a href="/blogs/<%=blog._id%>" class="btn btn-primary">View</a>
            </div>
            
          </div>
        </div>
      </div>
    

       <%  }) %>

      </div>

    </main>
  


    <%- include('../partials/footer.ejs') %> 
    
</body>
</html>


